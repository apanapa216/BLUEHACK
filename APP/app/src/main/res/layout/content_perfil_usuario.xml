<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dan_art.sknowcoin.layout_handlers.HomeTutorActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/app_bar_perfil_usuario">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:onClick="onClickImage"
        app:srcCompat="@drawable/user" />


    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:layout_toStartOf="@+id/buttonEditar"
        android:text="Nombre:" />

    <TextView
        android:id="@+id/textViewCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewNombre"
        android:layout_below="@+id/textViewNombre"
        android:layout_marginTop="23dp"
        android:text="Codigo:" />

    <TextView
        android:id="@+id/textViewCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCodigo"
        android:layout_below="@+id/textViewCodigo"
        android:layout_marginTop="23dp"
        android:text="Correo:" />

    <TextView
        android:id="@+id/textViewTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCorreo"
        android:layout_below="@+id/textViewCorreo"
        android:layout_marginTop="23dp"
        android:text="Telefono:" />

    <TextView
        android:id="@+id/textViewArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewTelefono"
        android:layout_below="@+id/textViewTelefono"
        android:layout_marginTop="23dp"
        android:text="Area:" />

    <TextView
        android:id="@+id/textViewSemestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewArea"
        android:layout_below="@+id/textViewArea"
        android:layout_marginTop="23dp"
        android:text="Semestre:" />

    <Button
        android:id="@+id/buttonEditar"
        style="@style/boton_resaltado"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/boton_circular_resaltado"
        android:onClick="buttonEditarAction"
        android:text="Editar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <EditText
        android:id="@+id/editText_Semestre"
        style="@style/input_text_inicio"
        android:textSize="10dp"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/input_text_circular"
        android:ems="8"
        android:layout_below="@+id/editText_Area"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_alignStart="@+id/imageView2"/>

    <EditText
        android:id="@+id/editText_Area"
        style="@style/input_text_inicio"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/input_text_circular"
        android:ems="8"
        android:textSize="10dp"
        android:layout_below="@+id/editText_Telefono"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_alignStart="@+id/imageView2"/>

    <EditText
        android:id="@+id/editText_Telefono"
        style="@style/input_text_inicio"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/input_text_circular"
        android:ems="8"
        android:textSize="10dp"
        android:layout_below="@+id/editText_Correo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_alignStart="@+id/imageView2"/>

    <EditText
        android:id="@+id/editText_Correo"
        style="@style/input_text_inicio"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/input_text_circular"
        android:ems="8"
        android:layout_below="@+id/editText_Codigo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_alignStart="@+id/imageView2"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editText_Codigo"
        style="@style/input_text_inicio"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/input_text_circular"
        android:ems="8"
        android:textSize="10dp"
        android:layout_below="@+id/editText_Nombre"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_alignStart="@+id/imageView2"
       />

    <EditText
        android:id="@+id/editText_Nombre"
        style="@style/input_text_inicio"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/input_text_circular"
        android:ems="8"
        android:textSize="10dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="12dp"
        android:layout_alignStart="@+id/imageView2" />


</RelativeLayout>


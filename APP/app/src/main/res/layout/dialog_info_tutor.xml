<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_redondeado">

    <RelativeLayout
        android:id="@+id/info_tutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorBlack">

        <ImageView
            android:id="@+id/tutDsip_foto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ella"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tutDisp_nombre_tutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tutDsip_foto"
            android:text="Great Username"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorAccentOrange"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carrera_info_tutor"
            style="@style/titulo_azul_oscuro_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tutDisp_nombre_tutor"
            android:layout_marginLeft="1dp"
            android:text="Carrera Estudiada"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/numero_carrera_info_tutor" />

        <TextView
            android:id="@+id/numero_carrera_info_tutor"
            style="@style/titulo_azul_oscuro_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tutDisp_nombre_tutor"
            android:layout_below="@+id/tutDisp_nombre_tutor"
            android:layout_marginLeft="5dp"
            android:text="8°"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/nivel_view"
            style="@style/subtitulo_naranja_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel"
            android:textSize="14dp"
            android:layout_below="@+id/carrera_info_tutor"
            android:layout_alignStart="@+id/numero_carrera_info_tutor" />

        <TextView
            android:id="@+id/tutDsip_nivel"
            style="@style/subtitulo_naranja_claro_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="17"
            android:textSize="18dp"
            android:layout_alignBaseline="@+id/nivel_view"
            android:layout_alignBottom="@+id/nivel_view"
            android:layout_toEndOf="@+id/nivel_view"
            />

        <RatingBar
            android:id="@+id/ratingBar_info_tutor"
            android:clickable="false"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tutDsip_nivel"
            android:layout_toEndOf="@+id/tutDsip_foto" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tutDisp_auxiliar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tutDisp_content"
        android:layout_below="@+id/info_tutor"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:weightSum="1">

        <Button
            android:id="@+id/tutDisp_btn_solicitar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/mini_boton_circular"
            android:gravity="center|center"
            android:text="Solicitar"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tutDisp_texto_xhora"
            style="@style/texto_blanco_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="¿Deseas solicitar la tutoría?"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_alignBaseline="@+id/tutDisp_btn_solicitar"
            android:layout_alignBottom="@+id/tutDisp_btn_solicitar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />

    </RelativeLayout>



</RelativeLayout>
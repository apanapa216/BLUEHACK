<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <RelativeLayout
       android:layout_width="300dp" android:layout_height="400dp"
       android:background="@drawable/fondo_redondeado"
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true">

       <ProgressBar
           android:background="@drawable/boton_circular"
           android:id="@+id/prog_bar_espera"
           style="?android:attr/progressBarStyle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="83dp"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true" />

       <TextView
           style="@style/subtitulo_azul_light"
           android:textSize="14dp"
           android:id="@+id/txt_cargando"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="53dp"
           android:text="Cargando..." />

   </RelativeLayout>
</RelativeLayout>
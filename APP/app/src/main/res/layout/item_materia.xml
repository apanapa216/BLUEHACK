<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/tutDisp_principal"
    >

    <RelativeLayout
        android:background="@color/colorBlackTransparent0"
        android:id="@+id/tutDisp_auxiliar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

       <ImageButton
           android:id="@+id/btn_eye"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="@drawable/eye"
           android:layout_marginEnd="15dp"
           android:layout_centerVertical="true"
           android:layout_alignParentEnd="true" />

        <TextView
            style="@style/titulo_blanco_regular"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la MonitorÃ­a"
            android:id="@+id/materia_nombre"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tutDisp_texto_xhora"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/shadow_fade"
        android:id="@+id/tutDisp_sombra"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:weightSum="1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/tutDisp_auxiliar"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/intro_bg</item>
    </style>

    <style name="dark_bg_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorLightBlack</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorDeepBlueBlack</item>
    </style>

    <style name="Descripcion_inicio" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="boton_resaltado" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="boton_opacidad" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="input_text_inicio" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorBlueLight</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="titulo_blanco_regular" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="titulo_azul_oscuro_bold" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorDeepBlue</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="subtitulo_gris_inclinado" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="subtitulo_azul_light" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">left|bottom</item>
    </style>

    <style name="subtitulo_naranja_light" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorAccentOrange</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">left|bottom</item>
    </style>

    <style name="subtitulo_azul_claro_bold" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorBlueLight</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|bottom</item>
    </style>

    <style name="subtitulo_naranja_claro_bold" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorPrimaryOrangeLight</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|bottom</item>
    </style>

    <style name="texto_gris_bold" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">left|bottom</item>
    </style>

    <style name="texto_blanco_regular" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">left|bottom</item>
    </style>

    <style name="texto_menu_naranja" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorPrimaryOrange</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">left|bottom</item>
    </style>
</resources>
